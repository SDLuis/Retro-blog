---
const { img, hashtag, title, description, date } = Astro.props
const hashtagLength = [1, 2, 3, 4, 5, 6, 7, 8]
---
<div class='border-2 border-[#1F201F] flex md:flex-row flex-col-reverse w-full rounded-sm h-auto lg:h-[360px]'>
	<div class='relative w-full md:flex-1 h-auto lg:h-full overflow-y-hidden'>
		<img class='w-full lg:h-full object-cover' src={img} alt={title} />
		<div class='absolute flex flex-col gap-7 right-2 top-2'>
			{ hashtagLength.map(() => (
				<div class='bg-white px-2 py-0.5 -rotate-90 border-2 border-black'>
					<p class='font-Bruzh text-lg'>{hashtag}</p>
				</div>
			))
			}
		</div>
	</div>
	<div class='lg:h-full w-full md:w-auto border-2 border-[#1F201F]' />
	<div class='flex-1 px-4 py-2 flex flex-col justify-around'>
		<p class='font-Bruzh capitalize text-xl tracking-wide py-2'>{title}</p>
		<p class='font-Skie text-lg tracking-wide text-justify'>{description}</p>
		<div class='w-full flex justify-between items-center'>
			<div class=''>
				<p class='font-Skie tracking-tight font-medium'>Article by Thomas Spencer</p>
				<div class='border-[1.9px] w-[45%] border-retrobrownheader-800' />
			</div>
			<p class='font-Skie text-sm font-bold'>{date}</p>
		</div>
	</div>
</div>