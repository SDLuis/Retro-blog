---
import Search from './icons/search.astro';
---
<div class='pt-8 pb-8 md:pb-16'>
	<div class='w-full flex items-center justify-between mb-12'>
		<div class='flex items-center'>
			<p class='font-Bruzh text-5xl z-10'>Retro</p>
			<div class='w-16 h-2.5 -ml-[44px] mt-1.5 bg-retrobrowntittle-800' />
		</div>
		<div class='md:hidden w-48 relative flex'>
			<input class='bg-transparent border-b text-xl border-black outline-none font-Skie w-full' />
			<div class='absolute right-0 bottom-1'>
				<Search />
			</div>
		</div>
	</div>
	<div class='flex gap-5 md:gap-0 flex-col md:flex-row md:justify-between w-full'>
		<div class='flex gap-6 lg:gap-10'>
			<p class='font-Bruzh tracking-wide uppercase text-lg md:text-2xl cursor-pointer'>#TRAVEL</p>
			<p class='font-Bruzh tracking-wide uppercase text-lg md:text-2xl cursor-pointer'>#ART</p>
			<p class='font-Bruzh tracking-wide uppercase text-lg md:text-2xl cursor-pointer'>#DESIGN</p>
			<p class='font-Bruzh tracking-wide uppercase text-lg md:text-2xl cursor-pointer'>#FILM</p>
			<p class='font-Bruzh tracking-wide lowercase text-lg md:text-2xl text-retrobrowntittle-800 cursor-pointer'>#just retro</p>
		</div>
		<div class='hidden w-60 relative md:flex'>
			<input class='bg-transparent border-b text-xl border-black outline-none font-Skie w-full' type="text"  aria-label="Search"/>
			<div class='absolute right-0 bottom-1'>
				<Search />
			</div>
		</div>
	</div>
</div>